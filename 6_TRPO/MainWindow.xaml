<Window x:Class="_6_TRPO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6_TRPO"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>

        </Grid.RowDefinitions>
        <DockPanel Background="AliceBlue" Grid.Row="0" Grid.Column="0">
            <Button Margin="25" Width="150" Height="50" DockPanel.Dock="Left">Главная</Button>
            <Button Margin="25" Width="150" Height="50" DockPanel.Dock="Left">Профиль</Button>
            <Button Margin="25"  Width="150" Height="50" DockPanel.Dock="Left">Настройки</Button>
            <Button Margin="25"  Width="150" Height="50" DockPanel.Dock="Left">Помощь</Button>
        </DockPanel>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <WrapPanel Orientation="Vertical" Margin="25" Grid.Row="2" Background="LightGray">
            <Label Content="*Пароль должен содержать минимум 8 символов."/>
            <Label FontSize="14" Content="*Email должен быть в формате name@mail.com.            *Все поля обязательны"/>
        </WrapPanel>
    </Grid>
</Window>
